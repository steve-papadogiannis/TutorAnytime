<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Login"
    android:id="@+id/login_form"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/owl_cropped_cap_circle"
            android:layout_marginBottom="40dp" />

        <EditText
            android:id="@+id/username_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:hint="Όνομα Χρήστη"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@android:color/black"
            style="@style/editext_graybg"
            android:textColorHint="@color/input_login_hint"
            android:drawableLeft="@drawable/ic_username" />

        <TextView
            android:id="@+id/empty_username_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Παρακαλώ εισάγετε όνομα χρήστη!"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Κωδικός"
            android:textColor="@android:color/black"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorHint="@color/input_login_hint"
            android:drawableLeft="@drawable/ic_pwd"
            style="@style/editext_graybg" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/empty_password_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Παρακαλώ εισάγετε κωδικό!"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/non_existing_user_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Λάθος όνομα χρήστη ή/και κωδικός"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Είσοδος"
            style="@style/btn_white_large" />

        <Button
            android:id="@+id/register_link_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="Δεν έχετε εγγραφεί ήδη; Εγγραφείτε τώρα!"
            android:textAllCaps="false"
            android:textColor="#4099ff"
            android:textSize="15sp"/>

    </LinearLayout>

</ScrollView>
